#include <iostream>    // Entrada y salida estándar
#include <string>      // Uso de strings

using namespace std;

// Estructura que representa un miembro del árbol
struct Miembro {
    int id;                    // Identificador único
    string nombre;             // Nombre del miembro
    Miembro* izquierdo;        // Hijo izquierdo
    Miembro* derecho;          // Hijo derecho
    int altura;                // Altura para balanceo AVL
};

// Función para obtener el máximo entre dos enteros
int maximo(int a, int b) {
    return (a > b) ? a : b;
}
